" ? Encoding
set encoding=utf-8

" ? Syntax highlighting
syntax enable

" ? Window split
set splitright splitbelow

" ? Disable --MODE-- duplication in CLI
set noshowmode

" ? Disable search highlighting
set nohlsearch

" ? Multiple buffers
set hidden

" ? Clipboard
set clipboard=unnamedplus

" ? Mouse 
set mouse=a ruler

" ? Line number
set number relativenumber cursorline

" ? Word wrap
set wrap linebreak nolist

" ? Autosave
set autowrite noswapfile

